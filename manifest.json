{
  "manifest_version": 2,
  "name": "Wikipedia Language Switcher",
  "version": "0.1",

  "description": "Quickly switch between different languages for an article in Wikipedia.",

  "icons": {
    "48": "icons/wls-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["src/LangSwitch.js"]
    }
  ],

  "options_ui": {
      "page": "src/options.html"
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "{d6af7033-899e-4884-a242-6a660397bd98}",
      "strict_min_version": "58.0"
    }
  }
}
